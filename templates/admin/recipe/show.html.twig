{% extends "admin/base.html.twig" %}

{% block body %}
	<main class="container">
		<div class="container mt-5">
			<div class="border rounded text-center">
				<h1 class="display-4">{{ recipe.name }}</h1>
				<p class="lead">{{ recipe.description }}</p>
				{% if recipe.fileName %}
					<img src={{ recipe.fileName }} class="w-50 img-fluid rounded mb-3" alt="{{ recipe.name }}">
				{% endif %}
				<hr class="my-4">
				<div class="row">
					<div class="col-md-6">
						<h5>Temps de préparation</h5>
						<p>{{ recipe.time ? recipe.time ~ ' minutes' : 'N/A' }}</p>
					</div>
					<div class="col-md-6">
						<h5>Nombre de personnes</h5>
						<p>{{ recipe.nbPeople ? recipe.nbPeople : 'N/A' }}</p>
					</div>
				</div>
				<div class="row">
					<div class="col-md-6">
						<h5>Difficulté</h5>
						<p>{{ recipe.difficulty ? recipe.difficulty ~ '/6' : 'N/A' }}</p>
					</div>
					<div class="col-md-6">
						<h5>Prix</h5>
						<p>{{ recipe.price ? recipe.price ~ ' €' : 'N/A' }}</p>
					</div>
				</div>
				<hr class="my-4">
				<h5>Ingrédients</h5>
				<ul class="list-group mb-3">
					{% for ingredient in recipe.ingredients %}
						<li class="list-group-item">{{ ingredient.name }}</li>
					{% endfor %}
				</ul>
				{% if recipe.isFavorite %}
					<span class="badge badge-success">Favori</span>
				{% endif %}
				<p class="mt-3">
					<a href="{{ path('admin_recipe_index') }}" class="btn btn-primary">Retour à la liste</a>
				</p>
			</div>
		</div>
	</main>
{% endblock %}
