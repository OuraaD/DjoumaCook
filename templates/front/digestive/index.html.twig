{% extends 'front/base.html.twig' %}

{% block title %}Astuces Digestives{% endblock %}

{% block body %}
<main class="container my-5">
    <h1 class="text-center mb-4">Nos astuces pour mieux dig√©rer</h1>
    <div class="row">
        {% for tip in tips %}
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm" style="transition: transform 0.3s ease;">
                    <div class="card-body">
                        <p class="card-text">{{ tip }}</p>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</main>

<style>
   
    .card:hover {
        transform: scale(1.05);
        border-color: #218838; 
    }

    
    .card-body {
        padding: 1.5rem;
        background-color: #f9fff9;
    }

    .card-text {
        font-size: 1rem;
        line-height: 1.6;
    }

    h1.text-success {
        font-weight: bold;
        text-shadow: 1px 1px 2px #218838; 
    }
</style>
{% endblock %}

