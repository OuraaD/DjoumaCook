{% extends 'front/base.html.twig' %}

{% block title %}DjoumaCook - Accueil
{% endblock %}

{% block body %}

	<div class="container">
		<h1 class="display-5 fw-bold mb-4">DjoumaCook</h1>
		<p class="fs-4">"Bienvenue sur DjoumaCook, où chaque plat est un chef-d'œuvre !"</p>
	</div>

	<div id="carouselExample" class="carousel slide">
		<div class="carousel-inner">
			<div class="carousel-item active">
				<img src="{{asset('img/thumbnails/street.jpg')}}" class="d-block w-100" alt="nourriture asiatique">
			</div>
			<div class="carousel-item">
				<img src="{{asset('img/thumbnails/fish.jpg')}}" class="d-block w-100" alt="poisson">
			</div>
			<div class="carousel-item">
				<img src="{{asset('img/thumbnails/cake.jpg')}}" class="d-block w-100" alt="cake fruits rouges">
			</div>

		</div>
		<button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
			<span class="carousel-control-prev-icon" aria-hidden="true"></span>
			<span class="visually-hidden">Previous</span>
		</button>
		<button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
			<span class="carousel-control-next-icon" aria-hidden="true"></span>
			<span class="visually-hidden">Next</span>
		</button>

	</div>

	<main class="container">
		<div class="row row-cols-1 row-cols-md-3 g-4">
			<div class="col">
				<div class="card h-70">
					<img src="{{asset('img/thumbnails/pain_pita.png')}}" class="card-img-top" alt="pain pita">
					<div class="card-body">
						<h5 class="card-title">Pain Pita fourré</h5>


					</div>
				</div>
			</div>
			<div class="col">
				<div class="card h-70">
					<img src="{{asset('img/thumbnails/assiette_turque.png')}}" class="card-img-top" alt="Assiette Turque">
					<div class="card-body">
						<h5 class="card-title">Assiette Turque</h5>
					</div>
				</div>
			</div>
			<div class="col">
				<div class="card h-70">
					<img src="{{asset('img/thumbnails/cake_framboise.png')}}" class="card-img-top" alt="Cake framboise">
					<div class="card-body">
						<h5 class="card-title">Cake Framboise</h5>

					</div>
				</div>
			</div>

		</div>
		<p class="mt-3 text center">
			<a href="{{ path('recipe_index') }}" class="btn btn-primary">Voir les recettes</a>
		</p>

	</main>
{% endblock %}
